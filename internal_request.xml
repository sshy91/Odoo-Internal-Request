<odoo>
    <record id="group_internal_request_admin" model="res.group">
        <field name="name">Group Internal Request Admin</field>
    </record>

    <record id="group_internal_request_user" model="res.group">
        <field name="name">Group Internal Request User</field>
    </record>

    <record id="group_internal_request_management" model="res.group">
        <field name="name">Group Internal Request Management</field>
    </record>

    <record id="group_internal_request_user_access" model="ir.access">
        <field name="name">Group Internal Request User Access</field>
        <field name="model_id" ref="model_internal_request"/>
        <field name="group_id" ref="group_internal_request_user"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">0</field>
    </record>

    <record id="group_internal_request_admin_access" model="ir.access">
        <field name="name">Group Internal Request Admin Access</field>
        <field name="model_id" ref="model_internal_request"/>
        <field name="group_id" ref="group_internal_request_admin"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>

    <record id="group_internal_request_management_access" model="ir.access">
        <field name="name">Group Internal Request Management Access</field>
        <field name="model_id" ref="model_internal_request"/>
        <field name="group_id" ref="group_internal_request_management"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>


    <record id="group_internal_request_user_rule" model="ir.rule">
        <field name="name">Group Internal Request User Rule</field>
        <field name="model_id" ref="model_internal_request"/>
        <field name="group_id" ref="group_internal_request_user"/>
        <field name="domain_force">[('request_id','=',user.id)]</field>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
    </record>

    <record id="group_internal_request_admin_rule" model="ir.rule">
        <field name="name">Group Internal Request Admin Rule</field>
        <field name="model_id" ref="model_internal_request"/>
        <field name="groups" eval="[(4,ref('group_internal_request_admin'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>


    <record id="group_internal_request_management_rule" model="ir.rule">
        <field name="name">Group Internal Request Management Rule</field>
        <field name="model_id" ref="model_internal_request"/>
        <field name="groups" eval="[(4,ref('group_internal_request_management'))]"/>
        <field name="domain_force">[('state','in',['submitted','approved'])]</field>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">0</field>
        <field name="perm_unlink">0</field>
    </record>


</odoo>