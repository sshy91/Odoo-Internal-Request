<odoo>
    <record id="report_internal_request" model="ir.action.report">
        <field name="name">Report Internal Request</field>
        <field name="model">internal.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_internal_request"/>
        <field name="binding_type">report</field>
        <field name="report_name">app_one.report_internal_request_template</field>
    </record>
    <template id="report_internal_request_template">
        <t t-call="web.basic_layout">
            <div class="page">
                <link rel="stylesheet" type="text/css" href="app_one/static/src/css/style.css"/>
                <h2>Report Internal Request</h2>
                <table class="custom_table">
                    <thead>
                        <tr>
                            <th>Requester</th>
                            <th>Reason</th>
                            <th>Approver By</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="docs" t-as="doc">
                            <td><span t-fields="doc.requester"/></td>
                            <td><span t-fields="doc.reason"/></td>
                            <td><span t-fields="doc.approver_id"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>

    </template>
</odoo>